<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MonPingV4.ViewModels.PingHostsVM"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MonPingV4.Views.PingHostsListView">
    
    <StackPanel Margin="10">
        <TextBox 
        Watermark="ip address or hostname" 
        Name="host_1"
        Width="180"
        Margin="5"
        HorizontalAlignment="Left"         
        Text= "{Binding Path=iphost, Mode=TwoWay}"/>
        <Button 
            Width="160" 
            Command="{Binding OnClickCommand}">Ping</Button>
    </StackPanel>

</UserControl>
